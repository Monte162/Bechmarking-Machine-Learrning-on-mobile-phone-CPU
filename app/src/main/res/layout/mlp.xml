<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#20EE"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10pt"
        android:text="Please define Parameters for MLP"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:id="@+id/MLPtextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X: "
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/MLPtextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:id="@+id/MLPparameter1"/>


    <EditText
        android:id="@+id/MLPparameter1value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter Value"
        android:layout_alignBaseline="@+id/MLPparameter1"
        android:layout_alignBottom="@+id/MLPparameter1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y: "
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/MLPparameter1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:id="@+id/MLPparameter2"/>

    <EditText
        android:id="@+id/MLPparameter2value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_alignBaseline="@+id/MLPparameter2"
        android:layout_alignBottom="@+id/MLPparameter2"
        android:layout_alignStart="@+id/MLPparameter1value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z: "
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/MLPparameter2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:id="@+id/MLPparameter3"/>



    <EditText
        android:id="@+id/MLPparameter3value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_alignBaseline="@+id/MLPparameter3"
        android:layout_alignBottom="@+id/MLPparameter3"
        android:layout_alignStart="@+id/MLPparameter2value" />

    <Button
        android:id="@+id/MLPTrain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/MLPparameter3"
        android:layout_below="@+id/MLPparameter3value"
        android:background="@drawable/buttoncolors"
        android:text="Train"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/MLPDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MLPparameter3value"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttoncolors"
        android:text="Download Model"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/MLPTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/MLPAnswers"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/MLPparameter3value"
        android:layout_marginEnd="14dp"
        android:background="@drawable/buttoncolors"
        android:text="Test"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/MLPAnswers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="26dp"
        android:text="ANSWERS HERE"
        android:layout_below="@+id/MLPTrain"
        android:layout_alignParentStart="true" />


</RelativeLayout>